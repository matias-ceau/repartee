Screen {
    layout: grid;
    grid-size: 1;
    grid-rows: auto 1fr auto auto;
}

#mode_display {
    background: $accent;
    color: $text;
    height: 1;
    content-align: left middle;
    padding: 0 0
}

#chat_container {
    width: 100%;
    height: 100%;
    border: round $accent;
}

#input {
    margin: 1 1;
    padding: 1 1;
}

Footer {
    height: auto;
}

LLMResponse {
    margin: 1 1;
    padding: 1 1;
    background: $boost;
    color: $text;
}
